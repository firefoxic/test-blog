---
import BaseLayout from "../../layouts/BaseLayout.astro"

const allPosts = await Astro.glob('../posts/*.md')
const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())].sort()

const page = {
	lang: `en`,
	title: `Tags`,
	description: `All existing tags`,
}
---

<BaseLayout page={page}>
	<ul class="Tags">
		{uniqueTags.map((tag) => <li class="Tags-Item"><a class="Tags-Link" href={`/tags/${tag}`}>{tag}</a></li>)}
	</ul>
</BaseLayout>

<style>
.Tags {
	display: flex;
	flex-wrap: wrap;
	padding: unset;
}

.Tags-Item {
	margin: 0.25em;
	border: dotted 1px #a1a1a1;
	border-radius: 0.5em;
	font-size: 1.15em;
	background-color: #F8FCFD;

	&::marker {
		color: transparent;
	}
}

.Tags-Link {
	display: inline-block;
	padding: 0.5em 1em;
	color: #00539F;
}
</style>
